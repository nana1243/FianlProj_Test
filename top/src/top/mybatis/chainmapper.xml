<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.mapper.ChainMapper">

	<!-- Need to search on how to use 2 parameters -->
	<select id="select" parameterType="String" resultType="chain">
		SELECT *
		FROM CHAIN WHERE chainID=#{chainID} AND hqID=#{hqID}
	</select>
	
	
		<!-- Need to search on how to use 2 parameters -->
	<select id="selectchainname" parameterType="String" resultType="chain">
		SELECT *
		FROM CHAIN WHERE hqID=#{hqID}
	</select>
	
	

	<select id="selectchain" parameterType="String"
		resultType="chain">
		SELECT * FROM CHAIN WHERE hqID=#{hqID}
	</select>
	<select id="selectall" resultType="chain">
		SELECT * FROM CHAIN
	</select>

	<insert id="insert" parameterType="chain">
		INSERT INTO CHAIN
		values(concat('chain_',TO_CHAR(chainID_seq.nextval)),#{chainName},#{chainAddress},#{chainRegDate},#{hqID})

	</insert>
	
	
</mapper>